[Unit]
Description=Streamlit Pocket AI Application
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/pocket-ai-demo
Environment="PATH=/home/ubuntu/pocket-ai-demo/venv/bin"
ExecStart=/home/ubuntu/pocket-ai-demo/venv/bin/streamlit run app.py --server.port 8501 --server.address 0.0.0.0 --server.headless true
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
